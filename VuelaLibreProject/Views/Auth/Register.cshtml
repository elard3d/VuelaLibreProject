                <div class="col-md-8 text-center">
                    <h2 class="text-capitalize text-white">register</h2>
                    <ul class="list-inline ">
                        
                        <li class="list-inline-item">
                            <a href="#" class="text-white">
                                Auth
                            </a>
                        </li>
                        <li class="list-inline-item">
                            <a href="#" class="text-white">
                                Register
                            </a>
                        </li>

                    </ul>
                </div>
            </div>
        </div>
