@{
    ViewData["Title"] = "Crear Vuelo";
    var vuelo = (Vuelos)Model;
    var departamentos = ((List<Departamentos>)ViewBag.Departamentos);
    var aerolineas = ((List<Aerolineas>)ViewBag.Aerolineas);
}

<div class="tm-section-2">
    <div class="container">
        <div class="row">
            <div class="col text-center">
                <h2 class="tm-section-title">Crear Vuelo</h2>

            </div>
        </div>
    </div>
</div>

<div class="tm-section tm-section-pad tm-bg-img  tm-position-relative" id="tm-section-6">
    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100" preserveAspectRatio="none" class="tm-section-down-arrow">
        <polygon fill=" #4747ed" points="0,0  100,0  50,60"></polygon>
    </svg>
    <div class="container ie-h-align-center-fix">
        <div class="row">
            <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6 col-xl-7">
                <div>
                    <img src="~/img/crear-vuelo.jpg" />
                </div>
            </div>
            <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6 col-xl-5 mt-3 mt-md-0">
                <div class="tm-bg-white tm-p-4">
                    <form action="CrearVuelo" method="post" class="contact-form">

                        <div class="form-group">
                            <select name="idDepartamentoOrigen" class="form-control">
                                <option value="">----- ORIGEN -----</option>
                                @foreach (var item in departamentos)
                                {
                                    <option value="@item.idDepartamentos" >@item.nombreDepartamentos</option>
                                }
                            </select>
                        </div>
                        <div class="form-group">
                            <select name="idDepartamentoDestino" class="form-control">
                                <option value="">----- DESTINO -----</option>
                                @foreach (var item in departamentos)
                                {
                                    <option value="@item.idDepartamentos">@item.nombreDepartamentos</option>
                                }
                            </select>
                        </div>
                        <div class="form-group">
                            <input type="text" id="contact_name" name="tiempoVuelo" class="form-control" placeholder="Tiempo Vuelo" required />
                        </div>
                        <div class="form-group">
                            <input name="fechaHoraVuelo" type="datetime-local" class="form-control" value="@ViewBag.fechaVuelo" />
                        </div>
                        <div class="form-group">

                               <select name="idAerolinea" class="form-control">
                                <option value="">----- AEROLINEA -----</option>
                                @foreach (var item in aerolineas)
                                {
                                    <option value="@item.idAero ">@item.nombreAerolinea</option>
                                }
                            </select>
                        </div>
                        <div class="form-group">
                            <input type="text" id="contact_name" name="precioVuelo" class="form-control" placeholder="Precio Vuelo" required />
                        </div>
                        <div class="form-group">
                            <input type="text" id="contact_name" name="asientos" class="form-control" placeholder="Cant. Asientos" required />
                        </div>

                        <button type="submit" class="btn btn-primary tm-btn-primary">Registrar Vuelo</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
