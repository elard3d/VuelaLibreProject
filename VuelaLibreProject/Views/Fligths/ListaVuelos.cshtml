@{
    ViewData["Title"] = "Lista de Vuelos";
}


<div class="container">

    <div class="navbar">
        <ul class="flex-grow-1">
            <li class="nav-item">
                <a class="btn btn-info" asp-area="" asp-controller="Fligths" asp-action="CrearVuelo">Crear Vuelo</a>
            </li>
        </ul>
    </div>
    <br />


    <h2>Lista de Vuelos</h2>

    <br />

    <table class="table table-bordered">
        <thead>
            <tr>
                <th></th>
                <th>Origen</th>
                <th>Destino</th>
                <th>Aerolinea</th>
                <th>Fecha/hora</th>
                <th>Tiempo de Vuelo</th>
                <th>Nº Asientos</th>
                <th>Precio</th>
            </tr>
        </thead>
        <tbody>

            @{
                var vuelos = ((List<Vuelos>)Model);
            }


            @foreach (var item in vuelos)
            {
                <tr>
                    <td>@item.idVuelo</td>
                    <td><b>@item.provinciaOrigen.nombreDepartamentos</b></td>
                    <td><b>@item.provinciaDestino.nombreDepartamentos</b></td>
                    <td><b>@item.aerolineas.nombreAerolinea</b></td>
                    <td>@item.fechaHoraVuelo</td>
                    <td>@item.tiempoVuelo Min</td>
                    <td>@item.asientos</td>
                    <td>S/@item.asientos</td>
                    <td>

                        <input name="numeroPasajes" type="number" value="1" min="1" max="10" />

                        <a class="btn btn-success" href="comprarVuelo?id=@item.idVuelo">Comprar</a>
                    </td>
                </tr>

            }
        </tbody>
    </table>
</div>